
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SSS_StoreStockSystem</title>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="~/mdb5-free-standard/css/mdb.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SSS_StoreStockSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!--Start navbar-->
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home/Index"></a>
                <button data-mdb-collapse-init
                        class="navbar-toggler"
                        type="button"
                        data-mdb-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Home/Index">
                                <img src="~/codezonelogo.webp" style="width: 80px;" />
                                </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="/Store">Stores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="/Item">Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="/Stock">Stock</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!--End navbar-->
    </header>
    <!--Start body-->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--End body-->

    <!-- Start footer -->
<footer class="bg-light text-center ">
  <!-- Grid container -->
  <div class="container p-4">

    <!-- Section: Social media -->
    <section class="mb-4">
                <a mdbRipple data-mdb-ripple-init class="btn btn-primary btn-floating m-1" style="background-color: #dd4b39" href="mailto:Mustafa.MahmoudZ11@gmail.com" target="_blank" role="button"><i class="fab fa-google"></i></a>
                <a mdbRipple data-mdb-ripple-init class="btn btn-primary btn-floating m-1" style="background-color: #0082ca" href="https://www.linkedin.com/in/mustafa-mahmoud-s" target="_blank" role="button"><i class="fab fa-linkedin-in"></i></a>
                <a mdbRipple data-mdb-ripple-init class="btn btn-primary btn-floating m-1" style="background-color: #333333" href="https://github.com/MustafaMahmoud1" target="_blank" role="button"><i class="fab fa-github"></i></a>
    </section>
    <!-- Section: Social media -->



    <!-- Section: Text -->
    <section class="mb-4">
      <p>
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt
        distinctio earum repellat quaerat voluptatibus placeat nam,
        commodi optio pariatur est quia magnam eum harum corrupti dicta,
        aliquam sequi voluptate quas.
      </p>
    </section>
    <!-- Section: Text -->


  </div>
  <!-- Grid container -->

  <!-- Copyright -->
  <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
    © 2020 Copyright
  </div>
  <!-- Copyright -->

</footer>
<!-- End footer -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/mdb5-free-standard/js/mdb.umd.min.js"></script>
    @await RenderSectionAsync("ValidationScriptSection", required: false)
    @RenderSection("Scripts", required: false)
</body>
</html>
