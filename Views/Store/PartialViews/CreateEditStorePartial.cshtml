@model Store
<div class="form-outline m-5" style="width: 22rem;" data-mdb-input-init>
    <input type="text" id="form20" name="Code" class="form-control form-control-lg form-icon-trailing" />
    <label class="form-label" for="form20">Store Code</label>
    <div class="form-helper">Example: CRF-001</div>
    <span asp-validation-for="Code" class="text-danger"> </span>
</div>
<div class="form-outline m-5 " style="width: 22rem;" data-mdb-input-init>
    <input type="text" id="form20" name="Name" class="form-control form-control-lg form-icon-trailing" />
    <label class="form-label" for="form20">Store Name</label>
    <div class="form-helper">Example: Carrefour</div>
    <span asp-validation-for="Name" class="text-danger"> </span>

</div>
<div class="form-outline m-5 " style="width: 22rem;" data-mdb-input-init>
    <input type="text" id="form20" name="Location" class="form-control form-control-lg form-icon-trailing" />
    <label class="form-label" for="form20">Store Location</label>
    <div class="form-helper">Example: Cairo, Nasr City</div>
    <span asp-validation-for="Location" class="text-danger"> </span>
</div>
