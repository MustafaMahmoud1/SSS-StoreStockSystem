@model ItemViewModel

<div class="h-100 d-flex flex-row justify-content-start align-items-center">
    <div class="form-outline m-3" style="width: 22rem;" data-mdb-input-init>
        <input asp-for="Code" type="text" id="form20" name="Code" class="form-control form-control-lg form-icon-trailing" />
        <label class="form-label" for="form20">Item Code</label>
        <div class="form-helper">Example: ITM-001</div>
    </div>
    <span asp-validation-for="Code" class="text-danger"> </span>
</div>

<div class="h-100 d-flex flex-row justify-content-start align-items-center">
    <div class="form-outline m-3 " style="width: 22rem;" data-mdb-input-init>
        <input asp-for="Name" type="text" id="form20" name="Name" class="form-control form-control-lg form-icon-trailing" />
        <label class="form-label" for="form20">Item Name</label>
        <div class="form-helper">Example: Bottled Water</div>
    </div>
    <span asp-validation-for="Name" class="text-danger"> </span>
</div>

<div class="h-100 d-flex flex-row justify-content-start align-items-center">
    <div class="form-outline m-3 " style="width: 22rem;" data-mdb-input-init>
        <input asp-for="Price" type="text" id="form20" name="Price" class="form-control form-control-lg form-icon-trailing" />
        <label class="form-label" for="form20">Item Price</label>
        <div class="form-helper">Example: 2.99</div>
    </div>
    <span asp-validation-for="Price" class="text-danger"> </span>
</div>
<input asp-for="Image" class="form-control form-control-lg w-25 m-4" id="formFileLg" type="file" />

